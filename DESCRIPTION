Package: CERMBscraper
Type: Package
Title: Scrape selected parts from fire-related documents
Version: 0.1.0
Authors@R: c(
  person("Michael", "Bedward", role = c("aut", "cre"), email = "michael.bedward@gmail.com"),
  person("Owen", "Price", role = "aut")
